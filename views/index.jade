extends layout

block content
  div.container
    div.navbar.navbar-default.navbar-fixed-top(role="navigation", ng-controller="NavigationController")
      div.container-fluid
        div.navbar-header
          <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#main-navbar">
          <a class="navbar-brand" href="#">Brand</a>
        div#main-navbar.collapse.navbar-collapse
          ul.nav.navbar-nav
            li
              a(href="#/users/login", ng-hide="user") Login
            li
              a(href="#/users/register", ng-hide="user") Sign up
          ul.nav.navbar-nav.navbar-right
            li
              a(href="#/users/account", ng-show="user") <strong>{{user | fullName}}</strong>
            li 
              a(href="#", ng-controller="LogoutController" ng-show="user", ng-click="logout()") Logout

    h1(style="visibility: hidden")= title
    <div ng-view></div>
